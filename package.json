{
  "name": "weather-app-main",
  "version": "1.0.0",
  "main": "script.js",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "rootDir": ".",
    "testMatch": [
      "**/tests/unit_weather.test.js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "collectCoverageFrom": [
      "script.js",
      "!**/node_modules/**",
      "!**/actions-runner/**"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/actions-runner/"
    ],
    "verbose": true
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  }
}
